<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/idListaAlternativas"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/turquesa_escuro"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

<TextView
    android:id="@+id/idListaAlternativasLetra"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:text="\u24B6"
    android:textStyle="bold"
    android:textSize="28sp"
    android:textColor="@color/white"
    />

<TextView
    android:id="@+id/idListaAlternativasTexto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="@color/white"
    android:textStyle="bold"
    android:textSize="16sp"
    android:text="O lançamento da plataforma foi feito numa live no YouTube no último dia 1º de novembro, numa estratégia de pré-venda apoiada na Black Friday. O evento online reuniu mais de 200 mil espectadores e contou com a participação do diretor do Damásio, Leonardo Cubiça, o CEO do Q Concursos, Caio Moretti, além de promotores, juízes, especialistas da área Jurídica, digital influencers e professores do curso."
    app:layout_constraintStart_toEndOf="@+id/idListaAlternativasLetra"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginEnd="6dp"
    android:layout_marginStart="30dp"
    />

</androidx.constraintlayout.widget.ConstraintLayout>
